@code {
    [Parameter, EditorRequired]
    public string? Title { get; init; }

    [Parameter, EditorRequired]
    public string? Rate { get; init; }

    [Parameter, EditorRequired]
    public Func<Task<string>>? Stat { get; init; }
}

<HxCard>
    <HeaderTemplate>@Title</HeaderTemplate>
    <BodyTemplate>
        <FluentLoader Fetch=@Stat>
            <HxCardText CssClass="display-1">@context</HxCardText>
        </FluentLoader>
    </BodyTemplate>
    <FooterTemplate>@Rate</FooterTemplate>
</HxCard>