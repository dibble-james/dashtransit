@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<EndpointState> State
@inject IDispatcher Dispatcher

@code {
    [Parameter, EditorRequired]
    public Core.Domain.EndpointId? EndpointId { get; set; }
}

<FluentCard>
    <StatCard Loading=@State.Value.IsLoading(this.EndpointId!) Title=@EndpointId!.Value.ToString() Rate="msg/sec" Stat=@State.Value.GetRate(EndpointId!).ToString("0.00") />
</FluentCard>
